<!DOCTYPE html>
<html>
  <head>
    <title><%= pkg.name %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
  </head>
  <body ng-app="app">

    <div ng-controller="sequencerCtrl" class="container">

      <controls>
      <p>
      <form ng-submit="setDuration(newDuration)">
        <input type="text"
             ng-model="newDuration"
             ng-init="newDuration=duration">
        <button>Set Duration</button>
      </form>
      </p>
      <p>
      <form ng-submit="setBpm(newBpm)">
        <input type="text"
             ng-model="newBpm"
             ng-init="newBpm=bpm">
        <button>Set BPM</button>
      </form>
      </p>
      <button ng-click="toggleSequence()">
        {{ isRunning() ? 'Stop' : 'Start' }}
      </button>
      </controls>

      <table class="patterns">
        <tr>
          <th>Step</th>
          <th ng-repeat="step in steps(duration)"
              ng-class="{'current-step': currentStep === step}">
            {{ step }}
          </th>
        </tr>
        <tr ng-repeat="instrument in instruments">
          <th>{{ instrument }}</th>
          <td ng-repeat="step in steps(duration)"
              ng-class="{'current-step': currentStep === step}"
              ng-click="toggleStep(instrument, step)"
              class="step">
            {{ note(instrument, step) }}
          </td>
        </tr>
      </table>

    </div>

    <script type="text/javascript" src="<%= js %>"></script>
  </body>
</html>
